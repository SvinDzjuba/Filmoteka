{{#each results}}
<li class="film-card" 
  data-overview='{{overview}}'
  data-title='{{title}}'
  data-name='{{name}}'
  data-vote='{{vote_average}}'
  data-popularity='{{popularity}}'
  data-genre='{{genre_ids}}'
  data-src='https://image.tmdb.org/t/p/w500{{poster_path}}'
  data-votes ='{{vote_count}}'
  data-id='{{id}}'> 
    <div>
      <div class="film-card__img_container">
        <img class="film-card__img" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{backdrop_path}}" width="100%" data-id="{{id}}" />
        <span class="film-card__vote">{{vote_average}}</span>
        <span class="film-card__vote-count">Vote Count: {{vote_count}}</span>
      </div>
      <h2 class="film-card__title">{{title}} {{name}}</h2>
      <p class="film-card__text">
        <span class="film-card__genres">{{genre_ids}}</span> 
        | 
        <span class="film-card__release">{{release_date}}{{first_air_date}}</span>
      </p>
    </div>
</li>
{{/each}}